.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-head.text-center
        %h2 Sign in
      .panel-body
        = link_to " Facebook 登入", user_facebook_omniauth_authorize_path, class: "btn btn-primary fa fa-facebook-official col-md-12"
        %hr/
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.input :email, required: false, autofocus: true, input_html: {class: "form-control"}
          = f.input :password, required: false , input_html: {class: "form-control"}
          = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
          Remember Me
          %hr/
          .form-actions

            = f.button :submit, "Sign in", class: "btn btn-default fa fa-envelope-o"
        -# = render "devise/shared/links"
        